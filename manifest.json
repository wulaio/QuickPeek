{
  "manifest_version": 3,
  "name": "QuickPeek",
  "description": "Preview links in-page without opening a new tab.",
  "version": "0.1.0",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "contextMenus",
    "activeTab",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "quickpeek-toggle": {
      "suggested_key": {
        "default": "Alt+P"
      },
      "description": "Toggle QuickPeek panel"
    }
  }
}
